<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :nationality %>
    <%= f.input :address %>
    <%= f.input :gender %>
    <%= f.input :birth_date %>
    <%= f.input :phone_number %>
    <%= f.input :manager_flag %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.association :department %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
